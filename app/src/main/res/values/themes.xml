<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:buttonTint">#0E5A10</item>
    </style>

    <style name="Widget.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.AlcoolOuGasolina" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2F4858</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">#0F1F29</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#B85045</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#054047</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>

        <!-- Modificações no layout dos componentes -->
        <item name="android:buttonStyle">@style/Widget.Button</item>
        <item name="android:checkboxStyle">@style/Widget.CheckBox</item>
        <item name="android:textViewStyle">@style/Widget.TextView</item>
    </style>

</resources>