<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlcoolOuGasolina" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0A4F3C</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#0A4F3C</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#CB584C</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#0A4F3C</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:backgroundTint">#0A4F3C</item>

        <!-- Modificações no layout dos componentes -->
        <item name="android:buttonStyle">@style/Widget.Button</item>
        <item name="android:checkboxStyle">@style/Widget.CheckBox</item>
        <item name="android:editTextStyle">@style/Widget.EditText</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.Button</item>
    </style>

    <!-- Estilo do botão -->
    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
    </style>
    <!-- Estilo do checkbox -->
    <style name="Widget.Checkbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/teal_700</item>
    </style>
    <!-- Estilo do EditText -->
    <style name="Widget.EditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="backgroundTint">@color/teal_700</item>
        <item name="errorTextColor">@color/teal_700</item>
    </style>
    <!-- Estilo do TextAppearance do botão -->
    <style name="TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>